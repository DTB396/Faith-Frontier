---
layout: null
permalink: /sitemap-doctrine.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {% assign essays = site.essays | default: site.posts %}
    {% assign doctrine_tagged = essays | where: "tags", "doctrine" %}
    {% assign theology_categorized = essays | where: "categories", "theology" %}
    {% assign doctrine = doctrine_tagged | concat: theology_categorized %}
  {% for p in doctrine %}
    <url>
      <loc>{{ site.url }}{{ p.url }}</loc>
      <lastmod>{{ p.date | date_to_xmlschema }}</lastmod>
      <changefreq>monthly</changefreq>
      <priority>0.6</priority>
    </url>
  {% endfor %}
</urlset>